<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_method_step_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selector"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context="com.aiassoft.bakingapp.activities.StepActivity"
    >

        <TextView
            android:id="@+id/tv_method_step_name"
            android:text="Method Step Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/method_step_item_padding"
            android:textColor="@color/textTitle"
            android:textSize="@dimen/method_step_name_size" />

        <TextView
            android:id="@+id/tv_method_description"
            android:text="mpla mpla mpla ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/method_step_item_padding"
            android:paddingEnd="@dimen/method_step_item_padding"
            android:paddingBottom="@dimen/method_step_item_padding"
            android:textColor="@color/textSubtitle"
            android:textSize="@dimen/method_description_size" />

</LinearLayout>